<!DOCTYPE html>
<!----Comentariu
-->
<html lang="ro">

<head>
    <%- include("../fragmente/head.ejs") %>
        <title>MyWheel</title>
        <link rel="stylesheet" href="/resurse/css/produse.css" type="text/css" />
        <script type="text/javascript" src=/resurse/js/produse.js></script>
</head>

<body>
    <%- include("../fragmente/header.ejs") %>
        <main>
            <label id="nume"> Nume: <input type="text" id="inp-nume"></label>
            <!--<label> Maxim calorii: <input type="number" id="inp-calorii" value="10000"></label>-->
            <div id="categorie"> Categorie:<!-- trebuie sa aiba acelasi name ca sa formeze un grup -->
                <p><label>Sport
                        <input id="i_rad1" name="gr_rad" value="Sport" type="radio" />
                    </label></p>
                <p><label>Clasice
                        <input id="i_rad2" name="gr_rad" value="Clasice" type="radio" />
                    </label>
                <p><label>Off-road
                        <input id="i_rad3" name="gr_rad" value="Off-road" type="radio" />
                    </label>
                <p><label>Curse
                        <input id="i_rad4" name="gr_rad" value="Curse" type="radio" />
                    </label>
                <p><label>Premium
                        <input id="i_rad5" name="gr_rad" value="Premium" type="radio" />
                    </label>
                <p><label>Toate
                        <input id="i_rad6" checked name="gr_rad" value="toate" type="radio" />
                    </label>
            </div>

            
            <label id="pret_min"> Pret minim: <input type="range" id="inp-pret" value="0" min="0" max="4000"> <span
                    id="infoRange">(0)</span></label>
            <label id="select_simplu">Select simplu:
                <select id="inp-categorie">
                    <option id="sel-toate" selected value="toate">toate</option>
                    <% for (let opt of locals.optiuni) { %>
                        <option value="<%- opt.unnest %>"><%- opt.unnest %> </option>
                        <% } %>
                </select>
            </label>
            <p>
                <button id="filtrare">Filtreaza</button>

                <button id="resetare">Reseteaza</button><br />
                <button id="sortCrescNume">Sorteaza crescator dupa pret si nume</button>
                <button id="sortDescrescNume">Sorteaza descrescator dupa pret si nume</button>

            </p>

            <p id="p-suma">Apăsați Alt+"c" pentru suma preturilor produselor afișate. </p>
            <section id="produse">
                <h2>Produse</h2>
                <div class="grid-produse">
                    <% for( let prod of locals.produse) { %>
                        <article class="produs">
                            <h3 class="nume">Nume: <a href="/produs/<%-prod.id %>"><span class="val-nume"><%-
                                            prod.nume%></span></a></h3>
                            <div class="info-prod">
                                <p class="pret">Pret: <span class="val-pret"><%- prod.pret%></span></p>
                                <p class="calorii">Dimensiune: <span class="val-calorii"><%- prod.dimensiune%></span></p>
                                <p class="gramaj">Materiale: <span class="val-gramaj"><%- prod.materiale%></span></p>
                            </div>
                            <p class="categorie">Categorie:<span class="val-categorie"><%- prod.categorie%></span></p>
                            <figure>
                                <a href="/produs/<%-prod.id %>"><img src="/resurse/imagini/<%- prod.imagine %>"
                                        style="width:50%;height:auto;" alt="[imagine <%- prod.nume %>]" /></a>
                            </figure>
                            <label class="selecteaza-cos">
                                Selectează:<br />
                                <input type="checkbox" class="select-cos" value="<%-prod.id %>" autocomplete="off">
                            </label>
                        </article>
                        <% }%>
                </div>
            </section>
        </main>

        <%- include("../fragmente/footer.ejs") %>
</body>

</html>